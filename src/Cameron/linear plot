import matplotlib.pyplot as plt
from matplotlib import axes
import numpy as np



x = np.linspace(0,8.33,100)
s1 = 11.1975/(2*np.pi)
s2 = 12.095/(2*np.pi)
s3 = 0.8975/(2*np.pi)


plt.plot(x,s1*x, color = "blue", label = "Sample: 11.19rad/mm")
plt.plot(x,s2*x, color = "green", label = "Background: 12.09rad/mm")
plt.plot(x,s3*x, color = "red", label = "Sample - Background: 0.89rad/mm")
plt.ylabel("Delta Phi (rad)")
plt.xlabel("Transverse Displacement (mm)")
plt.legend()
plt.show()